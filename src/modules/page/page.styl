.page
  padding-top: 190px
  padding-bottom: 70px
  @media (max-width: $breakpoint-md - 1)
    padding-top: 106px
    background: #f0f0f0

  &__date
    font-size: 11px
    font-weight: bold
    color: #b3b3b3
    margin-bottom: 24px

  img
    display: block
    max-width: 730px
    margin: 0 auto 50px
    padding: 0
    @media (max-width: 760px)
      max-width: 100%

  h1,h2,h3,h4,h5,h6
    line-height: 1.35
    font-weight: 900
    margin: 1.5em auto 2em

  h1
    font-size: 24px
  h2
    font-size: 22px
  h3
    font-size: 18px
  h4
    font-size: 18px
  h5
    font-size: 18px
  h6
    font-size: 18px
  p
    font-size: 14px
    font-family: 'Gilroy', sans-serif
    line-height: 1.55
    margin: 0 auto 12px

  ul, ol
    margin: 0 auto 12px
    //padding: 0 0 0 21px
    padding-left: 16px+21px
    font-family: 'Gilroy', sans-serif

    li
      font-size: 14px
      line-height: 1.55
      margin-bottom: 8px

  a
    text-decoration: underline
    &:hover
      text-decoration: none

  &__container
    > *
      padding: 0 16px
      margin: 0 auto
      max-width: 600px + (16px * 2)
      img
        max-width: 100%
