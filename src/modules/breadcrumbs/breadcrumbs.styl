.breadcrumbs
  &__item
    display: inline-block
    font-size: 11px
    font-weight: 900

    &:hover
      text-decoration: underline

    &:before
      content: ''
      display: inline-block
      vertical-align: middle
      border: 2px solid #000
      width: 6px
      height: 6px
      margin: 0 14px

    &:first-child:before
      display: none
