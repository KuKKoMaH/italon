
.productPrimary
  flex: 1
  margin-left: 79px
  @media (max-width: $breakpoint-md - 1)
    margin-left: 0
    margin-bottom: 49px

  &__title
    font-size: 36px
    font-weight: 900
    margin: 0
    @media (max-width: $breakpoint-md - 1)
      font-size: 24px

  &__field
    margin-top: 42px
    font-size: 11px
    font-weight: bold
    display: flex
    align-items: center
    @media (max-width: $breakpoint-md - 1)
      justify-content: space-between
      margin-top: 32px

  &__colors
    display: flex
    align-items: center
    flex-wrap: wrap
    margin-top: 11px
    overflow: auto
    padding: 0 2px

  &__color
    border: 3px solid transparent
    padding: 3px
    margin: 6px -2px
    width: 81px
    height: 81px
    anim()
    &--active
      border: 3px solid #000
      width: 93px
      height: 93px
      margin-top: 0
      margin-bottom: 0
    img
      display: block
      width: 100%
      height: 100%

  &__variants-name
    width: 160px

  &__variants
    display: flex

  &__variant
    font-size: 11px
    font-weight: 500
    background-color: transparent
    padding: 6px 7px 5px
    margin-right: 4px
    anim()
    cursor: pointer

    &--active
      background: #000000
      color: #ffffff

  &__sub
    display: flex
    @media (max-width: $breakpoint-md - 1)
      align-items: center
      margin-top: 50px

  &__left
    flex: 1

  &__price
    font-size: 34px
    font-weight: 900
    margin-top: 66px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 0


  &__info
    display: block
    margin-left: 250px
    font-size: 13px
    font-weight: bold
    margin-top: 31px
    position: relative
    @media (max-width: $breakpoint-md - 1)
      display: none

    &:before
      content:''
      display: block
      position: absolute
      height: 3px
      width: 224px
      background: #000000
      right: 100%
      top: 3px
      margin-right: 26px

  &__buy
    background: #000000
    display: flex
    align-items: center
    justify-content: center
    position: relative
    font-size: 13px
    font-weight: bold
    color: #ffffff
    align-self: flex-end
    border: 0
    padding: 18px 22px 17px
    cursor: pointer
    anim()

    &:before
      content: ''
      display: block
      background: url(sprite-cart.svg)
      margin-right: 12px

    &:hover
      background: #4c4c4c

    &:active
      background: #333