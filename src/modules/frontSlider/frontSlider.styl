.frontSlider
  background: #f0f0f0
  padding-top: 115px
  height: calc(100vh - 115px)
  position: relative
  min-height: 615px

  @media (max-width: $breakpoint-md - 1)
    padding-top: 66px
  @media (max-width: $breakpoint-sm - 1)
    height: auto

  &__wrapper
    display: flex
    flex-direction: row
    height: calc(100% - 100px)

    @media (max-width: $breakpoint-sm - 1)
      flex-direction: column-reverse
      height: auto

  &__left
    width: 40%
    position: relative
    background: #ffffff
    @media (max-width: $breakpoint-sm - 1)
      width: 100%
  &__right
    width: 60%
    position: relative
    @media (max-width: $breakpoint-sm - 1)
      width: 100%
      height: 295px

  &__content
    opacity: 0
    position: absolute
    right: 0
    top: 0
    height: 100%
    max-width: 420px
    display: flex
    flex-direction: column
    align-items: flex-start
    justify-content: center
    padding: 24px 12px
    anim(.3s)

    @media (max-width: $breakpoint-sm - 1)
      padding: 38px 12px 33px

    &--active
      opacity: 1
      z-index: 1
      @media (max-width: $breakpoint-sm - 1)
        position: relative

    p
      margin: 0 0 8px

  &__subtitle
    font-size: 13px
    font-weight: bold
    color: #b2b2b2
    margin-bottom: 24px
    text-transform: uppercase
    @media (max-width: $breakpoint-sm - 1)
      font-size: 11px
      margin-bottom: 12px

  &__title
    font-size: 48px
    font-weight: 900
    @media (max-width: $breakpoint-sm - 1)
      font-size: 30px

  &__text
    margin-top: 22px
    font-size: 13px
    line-height: 1.75

    @media (max-width: $breakpoint-sm - 1)
      margin-top: 11px

  &__price
    height: 77px
    display: flex
    align-items: flex-end
    font-size: 34px
    font-weight: 900

    @media (max-width: $breakpoint-sm - 1)
      height: auto
      font-size: 24px
      margin-top: 24px

  &__more
    height: 117px
    display: flex
    align-items: flex-end
    position: relative
    font-size: 13px
    font-weight: bold
    text-transform: uppercase

    @media (max-width: $breakpoint-sm - 1)
      height: auto
      margin-top: 25px

    &:before
      content: ''
      display: block
      position: absolute
      height: 3px
      width: 1000px
      background: #000000
      right: 100%
      margin-right: 21px
      bottom: 6px

  &__image
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    background-size: cover
    background-position: 50% 50%
    opacity: 0
    anim(.3s)

    &--active
      opacity: 1
      z-index: 1

  &__prev,
  &__next
    position: absolute
    bottom: 175px
    width: 45px
    height: 45px
    border: 0
    background: #000000
    display: flex
    align-items: center
    justify-content: center
    cursor: pointer
    outline: 0
    z-index: 2

    &:after
      content: ''
      display: block

    @media (max-width: $breakpoint-sm - 1)
      bottom: auto

  &__prev
    right: 60%
    &:after
      background: url(../../images/sprite-left.svg)
    @media (max-width: $breakpoint-sm - 1)
      right: 16px
      top: 295px

  &__next
    left: 40%
    &:after
      background: url(../../images/sprite-right.svg)
    @media (max-width: $breakpoint-sm - 1)
      left: auto
      right: 16px
      top: 295px
      margin-top: -45px

  &__dots
    display: flex
    align-items: center
    justify-content: center
    height: 100px
    //@media (max-width: $breakpoint-sm - 1)
    //  height: 40px

  &__dot
    margin: 0 16px
    width: 14px
    height: 14px
    display: flex
    align-items: center
    justify-content: center
    cursor: pointer
    border: 0
    background-color: transparent
    padding: 0
    outline: 0

    &:after
      content: ''
      display: block
      width: 0
      height: 0
      border: 3px solid #000
      anim(.3s)

    &--active:after
      width: 14px
      height: 14px