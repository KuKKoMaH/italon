  .catalogSidebar__filters-button ФИЛЬТРЫ
  .catalogSidebar__filters
    .catalogSidebar__filters-close
    .catalogSidebar__header ФИЛЬТРЫ
    .catalogSidebar__title.catalogSidebar__title--static ЦЕНА
    .catalogSidebar__slider(data-from='2000' data-to='3000' data-min='1000' data-max='6000')
    .catalogSidebar__slider-value

    .catalogSidebar__filter
      .catalogSidebar__title.catalogSidebar__filter-toggle ЦВЕТА
      .catalogSidebar__filter-container
        .catalogSidebar__filter-items.catalogSidebar__filter-items--images
          a.catalogSidebar__filter-item.catalogSidebar__filter-item--active(href='#'): img(src='https://source.unsplash.com/random/40x40?1' width=40 height=40)
