          a.catalogSidebar__filter-item.catalogSidebar__filter-item--active(href='#'): img(src='https://source.unsplash.com/random/40x40?1' width=40 height=40)
          a.catalogSidebar__filter-item(href='#'): img(src='https://source.unsplash.com/random/40x40?2' width=40 height=40)
          a.catalogSidebar__filter-item(href='#'): img(src='https://source.unsplash.com/random/40x40?3' width=40 height=40)

    .catalogSidebar__filter.catalogSidebar__filter--active
      .catalogSidebar__title.catalogSidebar__filter-toggle РАЗМЕР
      .catalogSidebar__filter-container
        .catalogSidebar__filter-items
          a.catalogSidebar__filter-item.catalogSidebar__filter-item--active(href='#') 30x40
          a.catalogSidebar__filter-item(href='#') 40x40
