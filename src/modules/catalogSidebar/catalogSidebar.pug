    a.catalogSidebar__item(href='#') Керамогранит настенный #[span.catalogSidebar__count 43]

  .catalogSidebar__filter
    .catalogSidebar__title.catalogSidebar__filter-toggle КОЛЛЕКЦИИ
    .catalogSidebar__filter-container
      .catalogSidebar__filter-items
        a.catalogSidebar__filter-item(href='#') Charme #[span.catalogSidebar__count 43]
        a.catalogSidebar__filter-item(href='#') Genesis #[span.catalogSidebar__count 43]
