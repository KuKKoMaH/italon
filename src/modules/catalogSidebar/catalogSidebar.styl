.catalogSidebar
  margin-bottom: 50px
  position: relative

  @media (max-width: $breakpoint-md - 1)
    padding: 0 6px
    margin-bottom: 0
  &__header
    font-size: 19px
    font-weight: 900
    margin-bottom: 55px
    @media (max-width: $breakpoint-md - 1)
      display: none

  &__title
    display: flex
    align-items: center
    font-size: 11px
    font-weight: bold
    margin-bottom: 23px

    @media (max-width: $breakpoint-md - 1)
      background: #ffffff
      padding 23px 21px 17px
      margin-bottom: 27px

    &:after
      content: ''
      display: block
      background: url(../../images/sprite-arrow.svg)
      margin-top: -4px
      margin-left: 10px
      @media (max-width: $breakpoint-md - 1)
        margin-left: auto

    &--active:after
      background: url(sprite-line.svg)

  &__item
    display: flex
    font-family: 'Gilroy', sans-serif
    font-size: 13px
    color: #888888
    margin-bottom: 26px

    &:hover
      text-decoration: underline

    &--active
      color: #000000
      font-weight: bold

  &__category
    margin-bottom: 43px
    @media (max-width: $breakpoint-md - 1)
      padding: 0 21px

  &__count
    margin-left: auto

  &__filters-button
    display: none
    position: absolute
    right: 7px
    top: -35px
    font-size: 14px
    font-weight: 900
    @media (max-width: $breakpoint-md - 1)
      display: block

    &:before
      content: ''
      display: inline-block
      vertical-align: middle
      background: url(sprite-filters.svg)
      margin-right: 14px

  &__filters-close
    display: none
    position: absolute
    right: 18px
    top: 18px
    background: url(sprite-close.svg)
    @media (max-width: $breakpoint-md - 1)
      display: block

  &__filters
    margin-top: 40px
    @media (max-width: $breakpoint-md - 1)
      opacity: 0
      pointer-events: none
      //z-index: -1
      transition opacity .15s ease-out
      position: fixed
      top: 66px
      right: 0
      bottom: 0
      left: 0
      border: 16px solid #f0f0f0
      background: #ffffff
      padding: 27px 27px 27px 23px
      margin-top: 0

      &--active
        pointer-events: all
        //z-index: 1
        opacity: 1

    & ^[0]__header
      margin-bottom: 20px
      @media (max-width: $breakpoint-md - 1)
        display: block

    & ^[0]__title
      @media (max-width: $breakpoint-md - 1)
        padding: 0


  &__slider
    width: 100%
    height: 2px
    background: #d7d7d7
    position: relative;
    direction: ltr;

    &, * {
      -webkit-touch-callout: none;
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      touch-action: none;
      user-select: none;
      box-sizing: border-box;
    }

    .noUi-base,
    .noUi-connects {
      width: 100%;
      height: 100%;
      position: relative;
      z-index: 1;
    }

    .noUi-connect,
    .noUi-origin {
      will-change: transform;
      position: absolute;
      z-index: 1;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      transform-origin: 0 0;
    }

    .noUi-state-drag * {
      cursor: inherit !important;
    }

    .noUi-connect
      background: #000;

    .noUi-handle
      position: absolute;
      width: 6px
      height: 12px
      background: #fff
      border: 2px solid #000
      right: -3px
      top: -5px

  &__slider-value
    font-family: 'Gilroy', sans-serif
    font-size: 13px
    color: #888888
    margin-top: 12px
    margin-bottom: 20px