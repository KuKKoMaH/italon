.projects
  padding-top: 38px
  padding-bottom: 76px
  overflow: hidden

  &__search
    margin-bottom: 37px
    @media (max-width: $breakpoint-md - 1)
      background: #000000
      padding: 26px 0px 35px

    &-header
      font-size: 18px
      font-weight: 900
      margin-bottom: 28px
      @media (max-width: $breakpoint-md - 1)
        color: #ffffff
        font-size: 22px
        text-align: center
        padding: 0 18px

    &-container
      display: flex
      flex-direction: row
      padding: 33px 78px 37px 60px
      background: #000000
      @media (max-width: $breakpoint-md - 1)
        flex-direction: column
        padding: 0 21px

  &__input
    flex: 1
    font-size: 14px
    padding: 4px 12px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 27px

  &__select
    flex: 1
    background: #ffffff
    margin: 0 18px
    align-self: center
    @media (max-width: $breakpoint-md - 1)
      align-self: stretch
      margin: 0 0 27px

    .selectize-input
      padding: 13px 15px
      position: relative
      font-size: 15px
      line-height: 1.2

      &:after
        content: ''
        display: block
        position: absolute
        top: 50%
        margin-top: -2px
        right: 22px
        border-width: 4px 4px 0 4px
        border-color: #000 transparent transparent transparent
        border-style: solid

      &.focus:after
        transform: rotate(180deg)

      .item
        display: inline-block
        vertical-align: middle

      > input
        vertical-align: middle
        font-family: 'Gilroy', sans-serif
        font-size: 15px
        max-width: 100% !important;
        max-height: none !important;
        min-height: 0 !important;
        padding: 0 !important;
        margin: 0 1px !important;
        line-height: inherit !important;
        text-indent: 0 !important;
        background: none !important;
        border: 0 none !important;
        box-shadow: none !important;
        outline: 0

    .selectize-dropdown
      position: absolute
      margin: 0
      max-height: 300px
      overflow: auto
      z-index: 1

      .option
        padding: 12px 18px
        anim()
        &:hover
          background: #f0f0f0

  &__button
    color: #fff
    font-size: 13px
    font-weight: 900
    border-radius: 0
    background-color: transparent
    border: 2px solid #fff
    padding: 11px 30px
    align-self: center
    margin-left: 18px
    anim()
    @media (max-width: $breakpoint-md - 1)
      margin-left: 0

    &:hover
      background: #ffffff
      color: #000000

  &__items
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: flex-start
    margin: 0 -19px
    @media (max-width: $breakpoint-md - 1)
      flex-direction: column

  &__item
    width: 33.3%
    @media (max-width: $breakpoint-md - 1)
      width: 100%

  &__content
    display: block
    padding-bottom: 100%
    margin: 19px
    position: relative
    background-size: cover
    background-position: 50% 50%
    color: #ffffff
    font-size: 18px
    font-weight: 900

    &:after
      content: ''
      display: block
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: rgba(0, 0, 0, .25)
      anim()

    &:hover
      &:after
        background: rgba(0, 0, 0, .65)

      & ^[0]__name
        opacity: 0
      & ^[0]__name--hover
        opacity: 1

  &__name
    position: absolute
    bottom: 37px
    left: 30px
    z-index: 1
    opacity: 1
    anim(.2s)

    &--hover
      position: absolute
      left: 0
      width: 100%
      top: 50%
      text-align: center
      z-index: 1
      transform: translateY(-50%)
      opacity: 0
      anim(.2s)

      &:after
        content: ''
        display: block
        background: url(sprite-plus.svg)
        margin: 40px auto 0
