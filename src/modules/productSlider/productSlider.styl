.productSlider
  flex: 1
  display: flex
  @media (max-width: $breakpoint-md - 1)
    flex-direction: column
    //margin: 0 -10px
    padding-bottom: 30px

  &__main
    flex: 1
    @media (max-width: $breakpoint-md - 1)
      margin: 0 -8px

    &-slide
      height: 500px
      background-size: cover
      background-position: 50% 50%
      @media (max-width: $breakpoint-md - 1)
        height: 300px

  &__thumbs
    position: relative
    display: flex
    align-items: center
    margin-left: 23px
    overflow: hidden
    @media (max-width: $breakpoint-md - 1)
      margin: 0 -8px

    &-slide
      padding: 3px
      border: 3px solid transparent
      anim()

      &--active
        border: 3px solid #000

      img
        display: block

  &__arrow
    border: 0
    cursor: pointer
    outline: 0
    position: absolute
    left: 50%
    margin-left: -7px
    @media (max-width: $breakpoint-md - 1)
      display: none
    &--prev
      top: 0
      margin-top: 12px
      background: url(sprite-up.svg)
    &--next
      bottom: 0
      margin-bottom: 12px
      background: url(sprite-down.svg)


