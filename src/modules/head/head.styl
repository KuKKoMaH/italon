.head
  background: #f0f0f0
  padding-top: 115px
  padding-bottom: 64px
  background-position: 50% 100%
  background-repeat: no-repeat

  @media (max-width: $breakpoint-md - 1)
    padding-top: 0
    border-top: 66px solid #fff
    padding-bottom: 12px
    background-image: none !important

  &--transparent
    background-color: transparent

  &__container
    position: relative
    @media (max-width: $breakpoint-md - 1)
      padding-left: 15px
    &.w
      flex-direction: column

  &__title
    position: relative
    font-size: 36px
    font-weight: 900
    margin-top: 68px
    @media (max-width: $breakpoint-md - 1)
      font-size: 24px
      margin-top: 31px

    &:before
      content: ''
      display: block
      position: absolute
      height: 4px
      width: 71px
      right: 100%
      margin-right: 45px
      top: 13px
      background: #000
      @media (max-width: $breakpoint-md - 1)
        display: none

  &__breadcrumbs
    margin-top: 22px
    @media (max-width: $breakpoint-md - 1)
      display: none

  &__big-title
    position: absolute
    right: 0
    font-size: 57px
    font-weight: 900
    top: 50%
    margin-top: -10px
    margin-left: 209px
    text-align: right
    @media (max-width: $breakpoint-md - 1)
      display: none
