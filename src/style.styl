html
  margin: 0
  padding: 0
  font-family: 'Gotham Pro', sans-serif;
  min-height: 100%

body
  margin: 0
  padding: 0
  -webkit-font-smoothing: antialiased
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%
  //min-height: 100%
  position: relative
  //display: flex
  //flex-direction: column
  //flex: 1
  //width: 100%

//::-webkit-scrollbar
//  width: 0

*, *:before, *:after
  box-sizing: border-box

//img
//  max-width: 100%
//  height: auto

a
  color: inherit
  text-decoration: none
  //&:hover
button
  color: inherit

.title
  text-align: center
  font-size: 33px
  line-height: 1
  font-weight: 500
  margin: 0
  &:after
    content: ''
    display: block
    margin: 22px auto
    height: 3px
    width: 50px
    background: $green
    @media (max-width: $breakpoint-sm - 1)
      margin: 15px auto

  @media (max-width: $breakpoint-sm - 1)
    font-size: 21px
    margin-bottom: 15px
    padding: 0 20px

.subtitle
  margin-top: 0
  text-align: center
  font-size: 17px
  font-weight: 400
  line-height: 1.55
  margin-bottom: 55px
  @media (max-width: $breakpoint-sm - 1)
    margin-bottom: 30px
    padding: 0 20px
    br
      display: none

.hidden
  display: none

.center-text
  text-align: center

.screen-reader-response
  display: none

.wpcf7-not-valid-tip
  position: absolute
  font-size: 14px
  color: red
  top: 100%
  margin-top: 4px

.wpcf7-response-output
  font-size: 15px
  margin-top: 8px
  text-align: center
  color: red

  &.wpcf7-mail-sent-ok
    color: $green

.page
  &--front
    background: #f0f0f0
    padding-top: 115px
    @media (max-width: $breakpoint-md - 1)
      padding-top: 66px
  &--product
    padding-top: 115px
    @media (max-width: $breakpoint-md - 1)
      padding-top: 66px


